    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Favorites</h1>
        </div>
    </section>

        <!-- added if statement for a default pic if image is not available in the search -->
    <div class="album py-5 bg-light">
        <div class="container">
            <h3 class="text-center">{{message}}</h3>
            <div class="row">
                {{#each savedFav}}
                {{#if animal.photos.[0].full }}
                <div class="col-md-4">

                    <div class="card mb-4 box-shadow">

                        <img class="card-img-top" src={{animal.photos.[0].full}} alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">
                                <ul class="list-group">
                                    <li class="list-group-item">Age: {{animal.age}}</li>
                                    <li class="list-group-item">Gender: {{animal.gender}}</li>
                                    <li class="list-group-item">Size: {{animal.size}}</li>
                                    <li class="list-group-item">Email: {{animal.contact.email}}</li>
                                    <li class="list-group-item">Phone: {{animal.contact.phone}}</li>
                                    <li class="list-group-item">Shelter ID: {{animal.organization_id}}</li>
                                </ul>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><a href={{animal.url}} target="_blank">View</a></button>
                                    <button type="button" class="delete btn btn-sm btn-outline-secondary" id={{animal.id}}>Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="logo.png" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">
                                <ul class="list-group">
                                    <li class="list-group-item">Age: {{animal.age}}</li>
                                    <li class="list-group-item">Gender: {{animal.gender}}</li>
                                    <li class="list-group-item">Size: {{animal.size}}</li>
                                    <li class="list-group-item">Email: {{animal.contact.email}}</li>
                                    <li class="list-group-item">Phone: {{animal.contact.phone}}</li>
                                    <li class="list-group-item">Shelter ID: {{animal.organization_id}}</li>
                                </ul>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"><a href={{animal.url}} target="_blank">View</a></button>
                                    <button type="button" class="delete btn btn-sm btn-outline-secondary" id={{animal.id}}>Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
